generator client {
  provider = "prisma-client-js"
}
//
datasource db {
  // example sqlite for dev
  provider = "sqlite"
  url      = "file:./dev.db"
  //
  //provider = "postgresql"
  //url      = env("DATABASE_URL")
}
// 
model Page {
  id                Int @id @default(autoincrement())
  title             String
  seoTitle          String
  description       String 
  seoDescription    String 
  slug              String @unique
  createdAt         DateTime @default(now())
  deletedAt         DateTime?
}
//
model Component {
  id                Int @id @default(autoincrement())
  name              String
  property          String
  parent            Int
}
//
model Entity {
  id                Int @id @default(autoincrement())
  name              String
  attribute         String
}
